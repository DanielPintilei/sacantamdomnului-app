{
  "name": "sacantamdomnului-app",
  "version": "0.2.0",
  "private": true,
  "author": "Daniel Pintilei",
  "dependencies": {
    "@types/jest": "^23.3.9",
    "@types/node": "^10.12.10",
    "@types/react": "^16.7.7",
    "@types/react-dom": "^16.0.10",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-window": "^1.1.0",
    "@types/styled-components": "^4.1.1",
    "downshift": "^3.1.5",
    "firebase": "^5.5.9",
    "idb-keyval": "^3.1.0",
    "react": "^16.8.0-alpha.1",
    "react-dom": "^16.8.0-alpha.1",
    "react-headroom": "^2.2.4",
    "react-motion-drawer": "^3.1.0",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.1",
    "react-window": "^1.3.1",
    "sitemap": "^2.1.0",
    "styled-components": "^4.1.1",
    "typescript": "^3.1.6"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run fetch-content && npm run write-sitemap && npm run stamp-time && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "fetch-content": "node scripts/fetchContent.js",
    "write-sitemap": "node scripts/writeSitemap.js",
    "stamp-time": "node scripts/stampTime.js"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.1.1",
    "dotenv": "^6.1.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "react-app"
    ],
    "parserOptions": {
      "ecmaVersion": 2016,
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "always-multiline"
        }
      ],
      "space-before-function-paren": [
        "error",
        "always"
      ],
      "one-var": [
        "error",
        {
          "initialized": "never"
        }
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "line": {
            "markers": [
              "*package",
              "!",
              "/",
              ",",
              "="
            ]
          },
          "block": {
            "balanced": true,
            "markers": [
              "*package",
              "!",
              ",",
              ":",
              "::",
              "flow-include"
            ],
            "exceptions": [
              "*"
            ]
          }
        }
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
