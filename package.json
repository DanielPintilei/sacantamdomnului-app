{
  "name": "sacantamdomnului-app",
  "version": "0.2.0",
  "private": true,
  "author": "Daniel Pintilei",
  "dependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.0",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-window": "^1.8.3",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "downshift": "^6.1.3",
    "idb-keyval": "^5.0.5",
    "node-fetch": "^2.6.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-headroom": "^3.1.1",
    "react-motion-drawer": "^3.1.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "^4.0.3",
    "react-window": "^1.8.6",
    "sitemap": "^7.0.0",
    "styled-components": "^5.3.0",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run fetch-content && npm run write-sitemap && npm run stamp-time && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "fetch-content": "node scripts/fetchContent.js",
    "write-sitemap": "node scripts/writeSitemap.js",
    "stamp-time": "node scripts/stampTime.js"
  },
  "devDependencies": {
    "dotenv": "^8.6.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "react-app"
    ],
    "parserOptions": {
      "ecmaVersion": 2016,
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "always-multiline"
        }
      ],
      "one-var": [
        "error",
        {
          "initialized": "never"
        }
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "line": {
            "markers": [
              "*package",
              "!",
              "/",
              ",",
              "="
            ]
          },
          "block": {
            "balanced": true,
            "markers": [
              "*package",
              "!",
              ",",
              ":",
              "::",
              "flow-include"
            ],
            "exceptions": [
              "*"
            ]
          }
        }
      ]
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
